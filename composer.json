    "name": "rayansys/dompdf-persian",
    "type": "library",
    "description": "DOMPDF is a CSS 2.1 compliant HTML to PDF converter",
    "homepage": "https://github.com/rayansys/dompdf-persian",
    "license": "LGPL-2.1",
    "authors": [
